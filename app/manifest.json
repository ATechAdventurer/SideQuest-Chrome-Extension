{
  "name": "SideQuest BSaber Extension",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "An extension that allows you to download beatsaber maps to SideQuest",
  "icons": {
    "16": "images/icon-16.png",
    "19": "images/icon-19.png",
    "38": "images/icon-38.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "http://bsaber.com/*",
        "https://bsaber.com/*",
        "https://beatsaver.com/*",
        "http://beatsaver.com/*"
      ],
      "css": [
        "styles/contentscript.css"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "https://bsaber.com/*",
    "http://bsaber.com/*",
    "https://beatsaver.com/*",
    "http://beatsaver.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "19": "images/icon-19.png",
      "38": "images/icon-38.png",
      "128": "images/icon-128.png"
    },
    "default_title": "SideQuest BSaber Extension",
    "default_popup": "popup.html"
  }
}